platform :ios, '8.0'

target 'TimeCurl' do
  pod 'TPKeyboardAvoiding', '~> 1.2.6'
  pod 'Flurry-iOS-SDK',     '~> 7.2.1'
  pod 'SAMTextView',        '~> 0.2.2'
  pod 'OrderedDictionary',  '~> 1.2'
  pod 'CocoaLumberjack',    '~> 2.0.3'

  # Rem 1: the regular cocoapod for TimesSquare is outdated -> download it from github
  # Rem 2: dependency to a forked and warning free version of the library
  pod 'TimesSquare', :git => 'https://github.com/pajai/objc-TimesSquare.git'

  # Rem: dependency to a forked and warning free version of the library
  pod 'CHCSVParser', :git => 'https://github.com/pajai/CHCSVParser.git'

end  

target 'TodayExtension' do
  pod 'CocoaLumberjack',    '~> 2.0.3'
end

target 'TimeCurlTests' do
end

